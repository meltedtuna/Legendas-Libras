{
  "manifest_version": 3,
  "name": "Automatic Sign Language Caption",
  "version": "1.2.0",
  "description": "Injects a sign-language overlay and caption helper into supported pages.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Sign Language Caption",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "storage",
    "scripting",
    "notifications",
    "alarms"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "overlay/*",
        "jwks.json"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; script-src 'self'; object-src 'none';"
  },
  "options_page": "options.html"
}